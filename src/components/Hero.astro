---
import Button from './Button.astro';

const {
  title = "Build. Collaborate. Innovate.",
  subtitle = "SDIT Open Source Community",
  description = "An open community of passionate SDIT students building real-world projects, sharing ideas, and learning together through open-source collaboration.",
  primaryCTA = { text: "Join the Community", href: "/join" },
  secondaryCTA = { text: "Communtiy guidelines", href: "/guidelines" },
  image = '/images/hero/image11.svg',
} = Astro.props;
---

<section class="relative min-h-screen font-[ui-sans-serif,system-ui,-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Helvetica Neue',Arial,'Noto Sans',sans-serif] bg-gradient-to-br from-purple-50 via-white to-indigo-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 overflow-hidden">
  <!-- Enhanced Background with Floating Code Elements -->
  <div class="absolute inset-0 opacity-30">
    <div class="absolute -top-40 -left-40 w-[30rem] h-[30rem] bg-purple-500 rounded-full filter blur-3xl animate-pulse-slow"></div>
    <div class="absolute bottom-0 right-0 w-[35rem] h-[35rem] bg-indigo-500 rounded-full filter blur-3xl animate-pulse-slow"></div>
    <div class="absolute top-1/2 left-1/2 w-[25rem] h-[25rem] bg-blue-400 rounded-full filter blur-3xl animate-pulse-slow animation-delay-2s"></div>
  </div>

  <!-- Floating Code Symbols Background -->
  <div class="floating-elements absolute inset-0 overflow-hidden pointer-events-none">
    <div class="code-symbol code-1">&lt;/&gt;</div>
    <div class="code-symbol code-2">{ }</div>
    <div class="code-symbol code-3">[ ]</div>
    <div class="code-symbol code-4">fn()</div>
    <div class="code-symbol code-5">=&gt;</div>
    <div class="code-symbol code-6">&lt;div&gt;</div>
    <div class="code-symbol code-7">( )</div>
    <div class="code-symbol code-8">#!/</div>
  </div>

  <!-- Grid Pattern Overlay -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>

  <div class="container mx-auto px-6 py-24 lg:py-32 relative z-10 flex items-center min-h-screen">
    <div class="grid lg:grid-cols-2 gap-16 items-center w-full">
      
      <!-- Image Section for mobile/tablet (moved first) -->
      <div class="relative animate-slide-up flex justify-center lg:order-2">
        <!-- Larger transparent image without any container -->
        <img
          src={image}
          alt="Students collaborating on open-source projects"
          class="w-full max-w-2xl h-auto object-cover transition-transform duration-700 hover:scale-105"
          loading="eager"
        />

        <!-- Decorative Elements -->
        <div class="absolute -bottom-8 -left-8 w-32 h-32 bg-purple-500 rounded-full opacity-20 blur-3xl animate-ping-slow"></div>
        <div class="absolute -top-8 -right-8 w-40 h-40 bg-indigo-500 rounded-full opacity-20 blur-3xl animate-ping-slow"></div>
      </div>
      
      <!-- Text Section with Improved Layout -->
      <div class="space-y-8 animate-fade-in lg:order-1">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-gray-900 dark:text-white leading-tight tracking-tight">
          {title}
        </h1>

        <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 leading-relaxed max-w-2xl">
          {description}
        </p>

        <!-- Enhanced Buttons with Better Spacing -->
        <div class="flex flex-wrap gap-4 pt-6">
          <Button href={secondaryCTA.href} variant="primary" size="lg" class="px-8 py-4 text-lg font-semibold transition-all duration-300 hover:scale-105">
            {secondaryCTA.text}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </Button>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Bottom Wave -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" class="w-full h-auto fill-current text-white dark:text-gray-900">
      <path d="M0,64L48,69.3C96,75,192,85,288,80C384,75,480,53,576,48C672,43,768,53,864,58.7C960,64,1056,64,1152,58.7C1248,53,1344,43,1392,37.3L1440,32L1440,120L1392,120C1344,120,1248,120,1152,120C1056,120,960,120,864,120C768,120,672,120,576,120C480,120,384,120,288,120C192,120,96,120,48,120L0,120Z"></path>
    </svg>
  </div>

  <!-- Scroll Indicator -->

</section>

<style>
  /* Grid Pattern Background */
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(0, 0, 0, 0.03) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }
  
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.3; }
  }
  
  @keyframes ping-slow {
    0% { transform: scale(1); opacity: 0.2; }
    50% { transform: scale(1.1); opacity: 0.3; }
    100% { transform: scale(1); opacity: 0.2; }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }
  
  .animate-ping-slow {
    animation: ping-slow 5s ease-in-out infinite;
  }

  .animation-delay-2s {
    animation-delay: 2s;
  }

  /* Floating Code Symbols */
  .code-symbol {
    position: absolute;
    font-family: 'Courier New', monospace;
    font-weight: bold;
    color: rgba(139, 92, 246, 0.15);
    font-size: 3rem;
    animation: float-code 25s infinite ease-in-out;
    user-select: none;
  }

  .dark .code-symbol {
    color: rgba(167, 139, 250, 0.15);
  }

  .code-1 {
    top: 10%;
    left: 5%;
    animation-delay: 0s;
    font-size: 2.5rem;
  }

  .code-2 {
    top: 60%;
    left: 8%;
    animation-delay: 3s;
    font-size: 3rem;
  }

  .code-3 {
    top: 15%;
    right: 15%;
    animation-delay: 6s;
    font-size: 2rem;
  }

  .code-4 {
    bottom: 25%;
    right: 10%;
    animation-delay: 2s;
    font-size: 2.5rem;
  }

  .code-5 {
    top: 45%;
    left: 85%;
    animation-delay: 5s;
    font-size: 2rem;
  }

  .code-6 {
    bottom: 35%;
    left: 75%;
    animation-delay: 7s;
    font-size: 2.5rem;
  }

  .code-7 {
    top: 70%;
    right: 25%;
    animation-delay: 4s;
    font-size: 2rem;
  }

  .code-8 {
    top: 25%;
    left: 40%;
    animation-delay: 8s;
    font-size: 2.5rem;
  }

  @keyframes float-code {
    0%, 100% {
      transform: translateY(0px) translateX(0px) rotate(0deg);
      opacity: 0.15;
    }
    25% {
      transform: translateY(-40px) translateX(30px) rotate(5deg);
      opacity: 0.25;
    }
    50% {
      transform: translateY(-80px) translateX(-20px) rotate(-5deg);
      opacity: 0.15;
    }
    75% {
      transform: translateY(-40px) translateX(-35px) rotate(3deg);
      opacity: 0.2;
    }
  }
</style>